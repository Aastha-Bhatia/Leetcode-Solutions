class Solution {
    public boolean validPalindrome(String s){
        int count=0;
        int i=0;
        int j=s.length()-1;
        while(i<j){
            if(s.charAt(i)==s.charAt(j)){
                i++;
                j--;
            }
            else{
                count++;
                if(count>1){
                    return false;
                }
                i++;
            }
        }
        return true;
    }
}