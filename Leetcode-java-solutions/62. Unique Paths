class Solution{
    public int calculatepaths(int i,int j, int m, int n){
        // base case
        if(i==m-1 && j==n-1){
            return 1;
        }
        else if(i==m || j==n){
            return 0;
        }
        int way1=calculatepaths(i,j+1,m,n);
        int way2=calculatepaths(i+1,j,m,n);
        return way1+way2;
    }
    public int uniquePaths(int m, int n) {
        int ans=calculatepaths(0,0,m,n);
        return ans;
    }
}