class Solution{
    public String removeDigit(String number, char digit){
        StringBuilder sb=new StringBuilder();
        int changed=0;
        for(int i=0;i<number.length();i++){
            if(number.charAt(i)==digit && changed==0){
                changed=1;
            }
            else{
                sb.append(number.charAt(i));
            }
        }
        return sb.toString();
    }
}