class Solution{
    public double myPow(double x,int n){
        long exp=n;
        if(n==1){
            return x;
        }
        if(n==0){
            return 1;
        }
        if(n<0){
            x=1/x;
            exp=-exp;
        }
        double ans=1;
        while(exp>0){
            // even
            if(exp%2==0){
                exp=exp/2;
                x=x*x;
            }
            else{
                exp=exp-1;
                ans*=x;
            }
        }
        return ans;
    }
}