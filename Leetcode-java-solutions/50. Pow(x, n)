class Solution{
    public double myPow(double x,int n){
        if(n<0){
            x=1/x;
            n=-n;
        }
        double ans=1;
        while(n>0){
            // if pow is odd..
            if(n%2==1){
                ans=ans*x;
                n=n-1;
            }
            else{
                n=n/2;
                x=x*x;
            }
        }
        return ans;
    }
}